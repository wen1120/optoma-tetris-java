<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/ActivityGame_MessageBox"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal|center_vertical"
        android:alpha="0.9"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="#f2f2f2"
        android:visibility="gone">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#999999"/>
            <TextView
                android:id="@+id/ActivityGame_MessageTxt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Message"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_weight="1"
                android:textColor="@color/glass_background"/>
            <TextView
                android:id="@+id/ActivityGame_additionalInfoTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="additional information"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@color/glass_background"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#999999"/>
        </LinearLayout>
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <com.optoma.tetris.game.GlassView
                    android:id="@+id/ActivityGame_GlassView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/game_activity_next_tetrimino" />

                <com.optoma.tetris.game.NextFigureView
                    android:id="@+id/ActivityGame_NextTetriminoImg"
                    android:layout_width="120dp"
                    android:layout_height="100dp"
                    android:background="@color/next_figure_background"
                    android:padding="@dimen/padding_default" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="top"
                    android:orientation="vertical"
                    android:padding="@dimen/padding_default">

                    <Button
                        android:id="@+id/ActivityGame_OnExitBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/padding_default"
                        android:text="Exit" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/padding_default"
                        android:gravity="center"
                        android:text="@string/game_activity_scores" />

                    <TextView
                        android:id="@+id/ActivityGame_ScoreTxt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="0" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/game_activity_level" />

                    <TextView
                        android:id="@+id/ActivityGame_LevelTxt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="0" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/ActivityGame_LeftBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/button"
                android:gravity="center"
                android:text="\u2190"
                android:textColor="@color/glass_background"
                android:textSize="35dp" />

            <TextView
                android:id="@+id/ActivityGame_RotateBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/button"
                android:gravity="center"
                android:text="\u21BB"
                android:textColor="@color/glass_background"
                android:textSize="35dp" />

            <TextView
                android:id="@+id/ActivityGame_RightBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/button"
                android:gravity="center"
                android:text="\u2192"
                android:textColor="@color/glass_background"
                android:textSize="35dp" />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>


